{% extends 'base.html.twig' %}

{% block title %}Director{% endblock %}

{% block body %}
<section class="main">

    <div class ="container">
    <h1>Director</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ director.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ director.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ director.surname }}</td>
            <tr>
                <th>Movies {{ director.movies.count }}</th>
                    {% for movie in director.movies %}
                <td>{{ movie.name }}</td>
                    {% endfor %}

            </tr>
        </tbody>
    </table>

    <a href="{{ path('director_index') }}">back to list</a>

    <a href="{{ path('director_edit', {'id': director.id}) }}">edit</a>

    {{ include('director/_delete_form.html.twig') }}
    </div>
</section>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Movie list{% endblock %}

{% block body %}

    <section class="main">
        <div class ="container">
            <h2>Movie list</h2>
            <div class="table-responsive">
            <table class="table table-hover table-fixed">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Year</th>
                    <th>Rating</th>
                    <th>MainCast</th>
                    <th>Director</th>
                    <th>Synopsis</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for movie in movies %}
                    <tr>

                        <td>{{ movie.id }}</td>
                        <td>{{ movie.name }}</td>
                        <td>{{ movie.year }}</td>
                        <td>{{ movie.rating }}</td>
                        <td>{{ movie.maincast }}</td>
                        <td>{{ movie.director.name }} {{ movie.director.surname }}</td>
                        <td>{{ movie.synopsis }}</td>
                        <td>
                        </td>
                        <td>
                            <a href="{{ path('movie_rate', {'id': movie.id}) }}">Rate Movie</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </section>
{% endblock %}

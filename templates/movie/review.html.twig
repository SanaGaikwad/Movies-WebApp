{% extends 'base.html.twig' %}

{% block title %}Rate Movie{% endblock %}

{% block body %}
    <section class="main">

        <div class ="container">
            <h2>{{ movie.name }}</h2>
            <table class="table" id="table-movies">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ movie.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ movie.name }}</td>
                </tr>
                <tr>
                    <th>Release Year</th>
                    <td>{{ movie.year }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ movie.rating }}</td>
                </tr>
                <tr>
                    <th>Cast</th>
                    <td>{{ movie.mainCast }}</td>
                </tr>
                <tr>
                    <th>Synopsis</th>
                    <td>{{ movie.synopsis }}</td>
                </tr>
                <tr>
                    <th>Genre</th>
                    <td>
                        {% for movieGenre in movie.genres %}
                            {% if loop.first %}
                                {{ movieGenre.type }}
                            {% else %}
                                {{ "/" }}{{movieGenre.type }}
                            {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
            <br>
                    <h5>Provide your review score</h5>
                   {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="button alt">Submit</button>
                    {{ form_end(form) }}

            <a href="{{ path('movie_list') }}">Browse list</a>


        </div>
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}

    <section class="main">
        <div class ="container">
    <h2>Movie index</h2>
<div class="table-responsive">
    <table class="table table-hover table-fixed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Rating</th>
                <th>MainCast</th>
                <th>Synopsis</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.name }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.rating }}</td>
                <td>{{ movie.mainCast }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="list">
    <a href="{{ path('movie_new') }}" class="button alt">Create new</a>
    </div>
        </div>
    </section>
{% endblock %}
